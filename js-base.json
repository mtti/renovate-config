{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mtti/renovate-config"
  ],
  "packageRules": [
    {
      "packageNames": [
        "@types/jest",
        "jest",
        "ts-jest"
      ],
      "packagePatterns": [
        "^@typescript-eslint/",
        "^eslint"
      ],
      "groupName": "testing and linting packages"
    },
    {
      "packagePatterns": [
        "^@mtti/"
      ],
      "groupName": "@mtti packages"
    }
  ]
}
